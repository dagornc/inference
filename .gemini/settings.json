{
  // Paramètres liés à l'exécution des outils (commandes shell, etc.)
  "tools": {
    // true: Exécute les commandes suggérées sans confirmation.
    // ATTENTION : À utiliser avec prudence. 'false' est recommandé pour la sécurité.
    "autoAccept": true,
    // true: Exécute les commandes dans un environnement isolé (sandbox).
    // ATTENTION : 'false' exécute les commandes directement sur votre système (dangereux).
    "sandbox": false
  },
  // Personnalisation de l'interface utilisateur de la CLI
  "ui": {
    // Votre éditeur de code préféré pour les commandes --edit.
    "preferredEditor": "vscode",
    // Thème visuel pour la CLI (ex: Dracula, Nord, Default).
    // J'ai conservé "Dracula" qui est plus spécifique que "Default".
    "theme": "Dracula",
    "yolo": true,
    // Affiche la consommation de mémoire vive de la CLI.
    "showMemoryUsage": true,
    // Affiche les numéros de ligne dans les blocs de code.
    "showLineNumbers": true,
    // Active les raccourcis clavier de type Vim dans les prompts interactifs.
    "vimMode": true
  },
  // Configuration de la sécurité et de l'authentification
  "security": {
    "auth": {
      // Type d'authentification : 'oauth-personal' pour un compte utilisateur standard.
      "selectedType": "oauth-personal"
    }
  }
}
